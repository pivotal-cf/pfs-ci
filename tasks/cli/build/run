#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

cli_version=$(cat riff-version/version)

echo
echo "Building CLI $cli_version"
echo

GOPATH=$(go env GOPATH)
export GOPATH
workdir=$GOPATH/src/github.com/projectriff
mkdir -p "$workdir"

cp -rf git-riff "$workdir/riff"
pushd "$workdir/riff/riff-cli"
  make test
popd

built_name=riff-linux-amd64-$cli_version

echo
echo "Copying $built_name binary to output directory"
cp "$workdir"/riff/riff-cli/riff \
    cli-output/$built_name

echo
echo Done.
echo
